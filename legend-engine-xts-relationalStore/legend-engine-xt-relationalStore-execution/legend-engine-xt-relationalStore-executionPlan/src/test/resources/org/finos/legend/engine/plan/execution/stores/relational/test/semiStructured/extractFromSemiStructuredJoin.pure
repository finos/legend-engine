###Pure
function join::testJoinOnSemiStructuredProperty():TabularDataSet[1]
{
    join::model::Person.all()->project(
      [
        x|$x.firstName,
        x|$x.lastName,
        x|$x.firm.legalName
      ],
      [
        'First Name',
        'Last Name',
        'Firm/Legal Name'
      ]
    );
}