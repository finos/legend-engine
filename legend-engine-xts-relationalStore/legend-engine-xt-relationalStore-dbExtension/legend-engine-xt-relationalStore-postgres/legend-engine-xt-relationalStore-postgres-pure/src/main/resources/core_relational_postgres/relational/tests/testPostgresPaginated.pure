function <<test.Test>> meta::relational::tests::query::function::postgres::testPaginatedByVendor():Boolean[1]
{
   // First type of function - simple query

   let f1 = {|Person.all()->sortBy(#/Person/firstName!fn#)->paginated(1,4);};

   let s3 = toSQLString($f1, meta::relational::tests::simpleRelationalMapping, meta::relational::runtime::DatabaseType.Postgres, postgresExtensions());
   assertEquals('select "root".ID as "pk_0", "root".FIRSTNAME as "firstName", "root".AGE as "age", "root".LASTNAME as "lastName", "root".FIRSTNAME as "o_fn" from personTable as "root" order by "root".FIRSTNAME offset 0 limit 4', $s3);
}

