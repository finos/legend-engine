function <<test.Test>>
  meta::pure::tds::tests::extensions::testGroupByWithWavgAggregation1() : Boolean[1]
{
  let mapping = meta::relational::tests::simpleRelationalMapping;
  let runtime = meta::external::store::relational::tests::testRuntime();

  let result = execute({|
                WeightedTrade.all()
                ->project([
                      col(x | $x.id, 'Trade ID'),
                      col(x | $x.quantity, 'Quantity'),
                      col(x | $x.weight, 'Weight'),
                      col(x | $x.tradeDate->adjust(1, DurationUnit.DAYS), 'tradeDate')
                  ])
                ->groupBy(['tradeDate'],
                  [
                      agg('ID count' , x | $x.getInteger('Trade ID'), y | $y->count())
                  ],
                  wavg('Quantity', 'Weight', 'Trade Weighted Average')
                  )
                  ->sort(asc('tradeDate'))}, $mapping, $runtime, meta::relational::extension::relationalExtensions()).values->at(0);

  assertEquals(4, $result.rows->size());
  assertSameElements(['2014-12-02,3,138.8', '2014-12-03,2,27.5', '2014-12-04,2,33.8', '2014-12-05,2,33.4999999999999957142857142857'],$result.rows->map(r| $r.values->makeString(',')));
}

