   assertEquals('select "name" as "name" from (select "root".FIRSTNAME as "name" from personTable as "root" offset 5 rows) as "subselect" order by "name"', $result->sqlRemoveFormatting());
   assertSize($result.values.rows, 2 );
}

function <<test.Test>> meta::relational::tests::projection::drop::testSimpleNestedDropAfterConcatenate():Boolean[1]
{
