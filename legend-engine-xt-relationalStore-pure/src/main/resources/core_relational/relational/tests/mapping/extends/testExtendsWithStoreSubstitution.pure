   }
)

###Pure
import meta::relational::mapping::*;
import meta::relational::tests::mapping::extend::storeSubstitution::*;
import meta::relational::tests::mapping::extend::model::*;
import meta::relational::tests::mapping::extend::*;

function <<test.Test>> meta::relational::tests::mapping::extend::storeSubstitution::testStoreSubstitutionForB():Any[*]
{
   let result = execute(|B.all(), BMapping, testRuntime(), meta::relational::extension::relationalExtensions());
   let expectedSQL = 'select "root".id as "pk_0", "root".bName as "bName", "root".id as "id", "root".aName as "aName" from ABC as "root"';
   assertEquals($expectedSQL, $result->sqlRemoveFormatting());
   assertSameElements([1, 2, 3, 4], $result.values.id);
}

function <<test.Test>> meta::relational::tests::mapping::extend::storeSubstitution::testStoreSubstitutionForC():Any[*]
{
   let result = execute(|C.all(), CMapping, testRuntime(), meta::relational::extension::relationalExtensions());
   let expectedSQL = 'select "root".id as "pk_0", "root".cName as "cName", "root".bName as "bName", "root".id as "id", "root".aName as "aName" from ABC as "root"';
   assertEquals($expectedSQL, $result->sqlRemoveFormatting());
   assertSameElements([1, 2, 3, 4], $result.values.id);
}
