   Firm: Pure {
      ~src _Firm
      name      : '|' + $src.name + '|',
      employees : $src.employees
   }
   
   Person: Pure {
      ~src _Person
      fullName : '|' + $src.fullName + '|'
   }
)

Mapping meta::pure::mapping::modelToModel::test::alloy::chain::filter::BridgeToDestMappingWithFilter
