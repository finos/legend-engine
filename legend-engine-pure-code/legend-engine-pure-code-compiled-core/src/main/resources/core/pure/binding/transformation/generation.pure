import meta::external::shared::format::transformation::*;

Class meta::external::shared::format::transformation::GenerationConfiguration
{
  format : String[1];
}

Class meta::external::shared::format::transformation::toPure::SchemaToModelConfiguration extends GenerationConfiguration
{
  {doc.doc='The id of the schema within the SchemaSet that will drive the generation'}
  sourceSchemaId  : String[0..1];
  {doc.doc='The package name into which the generated model classes will be created'}
  targetPackage   : String[1];
}

Class meta::external::shared::format::transformation::fromPure::ModelToSchemaConfiguration extends GenerationConfiguration
[
  validTargetSchemaName: $this.targetSchemaSet->matches('[A-Za-z0-9_]+(::[A-Za-z0-9_]+)+')   
]
{
  {doc.doc='Full name of the SchemaSet to be generated'}
  targetSchemaSet : String[1];
}