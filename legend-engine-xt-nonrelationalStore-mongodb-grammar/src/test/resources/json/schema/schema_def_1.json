{
  "database": {
    "databaseName": "my_database",
    "type": "clustered",
    "collections": [
      {
        "options": {
          "validator": {
            "$ref": "https://github.com/finos/legend/employee.schema"
          },
          "validationLevel": "strict",
          "validationAction": "error"
        },
        "indexes": [
          {
            "v": {
              "$numberInt": "2"
            },
            "key": {
              "_id": {
                "$numberInt": "1"
              }
            },
            "name": "_id_"
          }
        ],
        "uuid": "99eb1c3857ae4e2996eb7e2685efbfdc",
        "collectionName": "firm",
        "type": "collection"
      }
    ],
    "schemas": [
      {
        "$schema": "https://json-schema.org/draft/2020-12/schema",
        "$id": "https://github.com/finos/legend/employee.schema",
        "title": "Record of employee",
        "description": "This document records the details of an employee",
        "bsonType": "object",
        "properties": {
          "name": {
            "description": "name of the employee",
            "bsonType": "string",
            "minLength": 2
          },
          "age": {
            "description": "age of the employee",
            "bsonType": "int",
            "minimum": 16
          },
          "location": {
            "description" : "Location of Employee",
            "required" : ["country"],
            "bsonType" : "object",
            "properties": {
              "country": {
                "description": "country of city",
                "bsonType": "string"
              },
              "region": {
                "description": "region of city",
                "bsonType": "string",
                "minLength": 2
              }
            }
          },
          "otherNames" : {
            "description" : "Alternative Names",
            "bsonType": "array",
            "items" : {
              "bsonType" : "string"
            },
            "uniqueItems": true
          }
        },
        "required": [
          "name",
          "age"
        ],
        "additionalProperties": true
      }
    ]
  }
}
