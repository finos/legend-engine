{
  "database": {
    "databaseName": "my_database_1",
    "collections": [
      {
        "options": {
          "validator": {
            "$ref": "https://github.com/finos/legend/employee.schema"
          },
          "validationLevel": "strict",
          "validationAction": "error"
        },
        "collectionName": "firm",
        "type": "collection"
      }
    ],
    "schemas": [
      {
        "$schema": "https://json-schema.org/draft/2020-12/schema",
        "$id": "https://github.com/finos/legend/employee.schema",
        "bsonType": "object",
        "title": "Record of employee",
        "description": "This document records the details of an employee",
        "properties": {
          "name": {
            "bsonType": "string",
            "description": "name of the employee",
            "minLength": 2
          },
          "age": {
            "bsonType": "int",
            "description": "age of the employee",
            "minimum": 16
          },
          "location": {
            "bsonType": "object",
            "description": "Location of Employee",
            "properties": {
              "country": {
                "bsonType": "string",
                "description": "country of city"
              },
              "region": {
                "bsonType": "string",
                "description": "region of city",
                "minLength": 2
              }
            },
            "required": [
              "country"
            ],
            "additionalProperties": true
          },
          "otherNames": {
            "bsonType": "array",
            "description": "Alternative Names",
            "items": {
              "bsonType": "string"
            },
            "uniqueItems": true
          }
        },
        "required": [
          "name",
          "age"
        ],
        "additionalProperties": true
      }
    ]
  }
}