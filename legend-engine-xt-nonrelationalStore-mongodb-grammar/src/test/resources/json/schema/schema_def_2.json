{
  "database": {
    "databaseName": "my_database_2",
    "collections": [
      {
        "options": {
          "validator": {
            "$ref": "https://github.com/finos/legend/employee.schema"
          },
          "validationLevel": "strict",
          "validationAction": "error"
        },
        "collectionName": "firm",
        "type": "collection"
      }
    ],
    "schemas": [
      {
        "$schema": "https://json-schema.org/draft/2020-12/schema",
        "$id": "https://github.com/finos/legend/employee.schema",
        "bsonType": "object",
        "title": "Record of employee",
        "description": "This document records the details of an employee",
        "properties": {
          "id": {
            "bsonType": "long",
            "description": "employee ID",
            "minimum": 100000
          },
          "name": {
            "bsonType": "string",
            "description": "name of the employee",
            "minLength": 2
          },
          "age": {
            "bsonType": "int",
            "description": "age of the employee",
            "minimum": 16
          },
          "hobbies": {
            "bsonType": "object",
            "description": "Two lists of indoor & outdoor hobbies",
            "properties": {
              "indoor": {
                "bsonType": "array",
                "description": "List of indoor hobbies",
                "items": {
                  "bsonType": "string",
                  "description": "indoor hobby"
                },
                "minItems": 2,
                "maxItems": 10,
                "uniqueItems": true
              },
              "outdoor": {
                "bsonType": "array",
                "description": "List of outdoor hobbies",
                "items": {
                  "bsonType": "string",
                  "description": "outdoor hobby"
                },
                "minItems": 1,
                "maxItems": 5,
                "uniqueItems": true
              }
            },
            "required": [
              "indoor",
              "outdoor"
            ],
            "additionalProperties": false
          }
        },
        "required": [
          "id",
          "name",
          "age",
          "hobbies"
        ],
        "additionalProperties": true
      }
    ]
  }
}