import meta::pure::profiles::*;
import meta::pure::functions::tests::model::*;

function <<test.Test>> meta::pure::functions::meta::tests::genericType::testGenericType():Boolean[1]
{
    assertIs(Class, Person->genericType().rawType->toOne());
    assertIs(Person, Person->genericType().typeArguments->at(0).rawType->toOne());
}

function <<test.Test>> meta::pure::functions::meta::tests::genericType::testGenericTypeInstance():Boolean[1]
{
    assertIs(Person, ^Person(firstName='Pierre', lastName='Doe')->genericType().rawType->toOne());
}

function <<test.Test>> meta::pure::functions::meta::tests::genericType::testGenericTypeFromEnum():Boolean[1]
{
    assertIs(Enumeration, GeographicEntityType->genericType().rawType->toOne());
    assertIs(GeographicEntityType, GeographicEntityType->genericType().typeArguments->at(0).rawType->toOne());
}

function <<test.Test>> meta::pure::functions::meta::tests::genericType::testGenericTypeFromEnumVal():Boolean[1]
{
    assertIs(GeographicEntityType, GeographicEntityType.CITY->genericType().rawType->toOne());
}

function <<test.Test>> meta::pure::functions::meta::tests::genericType::testGenericTypeWithGenerics():Boolean[1]
{
    let l = ^List<String>(values=['a', 'b', 'c']);
    assertIs(List, $l->genericType().rawType->toOne());
    assertIs(String, $l->genericType().typeArguments->at(0).rawType->toOne());
}
