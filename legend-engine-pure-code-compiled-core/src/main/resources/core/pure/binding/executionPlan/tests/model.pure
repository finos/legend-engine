import meta::external::shared::format::executionPlan::tests::model::firm::*;

Enum meta::external::shared::format::executionPlan::tests::model::firm::AddressType
{
   Headquarters,
   RegionalOffice,
   Home
}

Class meta::external::shared::format::executionPlan::tests::model::firm::Firm
{
   name      : String[1];
   ranking   : Integer[0..1];
   addresses : AddressUse[1..*];
}

Class meta::external::shared::format::executionPlan::tests::model::firm::Address
{
   firstLine  : String[1];
   secondLine : String[0..1];
   city       : String[0..1];
   region     : String[0..1];
   country    : String[1];
   position   : GeographicPosition[0..1];
}

Class meta::external::shared::format::executionPlan::tests::model::firm::GeographicPosition
[
   validLatitude: ($this.latitude >= -90) && ($this.latitude <= 90),
   validLongitude: ($this.longitude >= -180) && ($this.longitude <= 180)
]
{
   latitude  : Decimal[1];
   longitude : Decimal[1];
}


Class meta::external::shared::format::executionPlan::tests::model::firm::AddressUse
{
   addressType : AddressType[1];
   address     : Address[1];
}

Class meta::external::shared::format::executionPlan::tests::model::firm::Person
{
   firstName      : String[1];
   lastName       : String[1];
   dateOfBirth    : StrictDate[0..1];   
   addresses      : AddressUse[*];
   isAlive        : Boolean[1];
   heightInMeters : Float[1];
}

Association meta::external::shared::format::executionPlan::tests::model::firm::Firm_Person
{
   firm      : Firm[1];
   employees : Person[*];
}
