   (
      id                               = 'Example',
      contentTypes                     = 'text/example',
      
      externalFormatMetamodel          = ExampleSchema,

      externalFormatToPureDescriptor   = exampleSchemaToPureDescriptor(),
      externalFormatFromPureDescriptor = exampleSchemaFromPureDescriptor(),
