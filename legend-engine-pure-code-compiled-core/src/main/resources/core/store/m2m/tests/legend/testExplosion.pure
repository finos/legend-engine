{
   let tree = #{FirmEmployeeWithConstraint {firmName, fullName} }#;

   let result = execute(
      |FirmEmployeeWithConstraint.all()->graphFetchChecked($tree)->serialize($tree),
      explosionWithConstraintMapping,
      ^Runtime(connections = ^JsonModelConnection(
                                element=^ModelStore(),
