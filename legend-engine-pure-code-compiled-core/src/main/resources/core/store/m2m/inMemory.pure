       |[],
       |let filtered = if ($impl.filter->isEmpty(),|$list.values, |let f = $impl.filter->toOne(); $list.values->filter(v|$f->evaluate(list($v))->toOne()->cast(@Boolean)););
        let static = ^StaticMappingInstanceData
