function meta::external::format::protobuf::transformation::fromPure::transform(modelUnit:ModelUnit[1], input:ModelToProtobufDataConfiguration[1]):meta::external::shared::format::metamodel::data::SchemaData[*]
{
   meta::legend::test::mayExecuteLegendTest(
       {clientVersion, serverVersion, serializationKind, host, port|
         let fStr = 'meta::protocols::pure::'+$clientVersion+'::invocation::externalFormat::protobuf::legendGenerateProtobuf_ModelUnit_1__ModelToProtobufDataConfiguration_1__String_1__Integer_1__String_1__SchemaData_MANY_';
         let xf = $fStr->pathToElement()->cast(@Function<{ModelUnit[1], ModelToProtobufDataConfiguration[1], String[1], Integer[1], String[1]->meta::external::shared::format::metamodel::data::SchemaData[*]}>);
         $xf->evaluate([$modelUnit, $input, $host, $port, $serverVersion]->map(v|list($v)))->toOneMany()->cast(@meta::external::shared::format::metamodel::data::SchemaData);},
       | generateProtobufFromPure($modelUnit->resolve().classes(), $input)->map(x|
