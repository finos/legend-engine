function meta::external::format::protobuf::transformation::fromPure::pureToProtobuf(modelUnit:ModelUnit[1], config:ModelToProtobufDataConfiguration[1]): SchemaSet[1]
{
   let sourceModels = $modelUnit->resolve().classes();
   createSchemaSet($sourceModels, $config);
}

function <<access.private>> meta::external::format::protobuf::transformation::fromPure::createSchemaSet(sourceModels:Class<Any>[*], config:ModelToProtobufDataConfiguration[1]): SchemaSet[1]
{
   let schemaSetSepPos  = $config.targetSchemaSet->lastIndexOf('::');
   let schemaSetPkgName = $config.targetSchemaSet->substring(0, $schemaSetSepPos);

   let protoSchemas     = generateProtobufFromPure($sourceModels, $config);

   ^SchemaSet(
      package = pathToPackage($schemaSetPkgName, true),
      name    = $config.targetSchemaSet->substring($schemaSetSepPos+2),
      format  = 'Protobuf',
      schemas = $protoSchemas->map(f | ^Schema(
                                         location  = $f.fileName,
                                         detail    = $f
                                        ))
   );
}

