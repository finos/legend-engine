function flatten::semiStructuredPrimitivePropertyFiltering(): TabularDataSet[1]
{
    flatten::model::Person.all()
    ->filter(x | $x.firm.otherNames->contains('A'))
    ->project([
        col(x | $x.firstName, 'First Name'),
        col(x | $x.firm.legalName, 'Firm Name')
    ])
    ->distinct()
}

