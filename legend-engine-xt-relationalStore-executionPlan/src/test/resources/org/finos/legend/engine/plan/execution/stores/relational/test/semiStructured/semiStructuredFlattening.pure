###Pure
Class flatten::model::Person
{
  firstName: String[1];
  lastName: String[1];
  firm: flatten::model::Firm[1];
}

Class flatten::model::Firm
{
  legalName: String[1];
  otherNames: String[*];
  addresses: flatten::model::Address[*];
}

Class flatten::model::Address
{
  name: String[1];
}

Class flatten::model::AddressWithLines extends flatten::model::Address
{
  lines: flatten::model::AddressLine[*];
}

Class flatten::model::AddressLine
{
  lineno: Integer[1];
}

Class flatten::model::StreetAddressLine extends flatten::model::AddressLine
{
  street: String[1];
}

Class flatten::model::CityAddressLine extends flatten::model::AddressLine
{
  city: String[1];
}

Class flatten::model::StateAddressLine extends flatten::model::AddressLine
{
  state: String[1];
}

###Relational
Database flatten::store::SnowflakeDB
(
  Schema PERSON_SCHEMA
  (
    Table PERSON_TABLE
    (
      ID INTEGER PRIMARY KEY,
      FIRSTNAME VARCHAR(100),
      LASTNAME VARCHAR(100),
      FIRM_DETAILS SEMISTRUCTURED,
      MANAGERID INTEGER
    )
  )
)


###ExternalFormat
Binding flatten::store::FirmBinding
{
  contentType: 'application/json';
  modelIncludes: [
    flatten::model::Firm,
    flatten::model::Address,
    flatten::model::AddressWithLines,
    flatten::model::AddressLine,
    flatten::model::StreetAddressLine,
    flatten::model::CityAddressLine,
    flatten::model::StateAddressLine
  ];
}

###Mapping
Mapping flatten::mapping::SnowflakeMapping
(
  flatten::model::Person: Relational
  {
    ~primaryKey
    (
      [flatten::store::SnowflakeDB]PERSON_SCHEMA.PERSON_TABLE.ID
    )
    ~mainTable [flatten::store::SnowflakeDB]PERSON_SCHEMA.PERSON_TABLE
    firstName: [flatten::store::SnowflakeDB]PERSON_SCHEMA.PERSON_TABLE.FIRSTNAME,
    lastName: [flatten::store::SnowflakeDB]PERSON_SCHEMA.PERSON_TABLE.LASTNAME,
    firm: Binding flatten::store::FirmBinding : [flatten::store::SnowflakeDB]PERSON_SCHEMA.PERSON_TABLE.FIRM_DETAILS
  }
)

###Runtime
Runtime flatten::runtime::SnowflakeRuntime
{
    mappings :
    [
        flatten::mapping::SnowflakeMapping
    ];
    connections :
    [
        flatten::store::SnowflakeDB :
        [
            connection_1 : #{
                RelationalDatabaseConnection {
                    store: flatten::store::SnowflakeDB;
                    type: Snowflake;
                    specification: LocalH2{};
                    auth: Test;
                }
            }#
        ]
    ];
}

