function <<access.private>> meta::external::query::sql::transformation::compile::utils::removeLambdaTDSFunction(l:meta::protocols::pure::vX_X_X::metamodel::m3::function::LambdaFunction[1], functions:String[*]):meta::protocols::pure::vX_X_X::metamodel::m3::function::LambdaFunction[1]
{
  $l->removeTDSFunction($functions)->cast(@meta::protocols::pure::vX_X_X::metamodel::m3::function::LambdaFunction);
}

function <<access.private>> meta::external::query::sql::transformation::compile::utils::removeTDSFunction(a:meta::protocols::pure::vX_X_X::metamodel::m3::valuespecification::ValueSpecification[1], functions:String[*]):meta::protocols::pure::vX_X_X::metamodel::m3::valuespecification::ValueSpecification[1]
{
  $a->match([
    l:meta::protocols::pure::vX_X_X::metamodel::m3::function::LambdaFunction[1] | ^$l(body = $l.body->map(b | $b->removeTDSFunction($functions))),
    c:meta::protocols::pure::vX_X_X::metamodel::m3::valuespecification::Collection[1] | ^$c(values = $c.values->map(v | $v->removeTDSFunction($functions))),
    f:meta::protocols::pure::vX_X_X::metamodel::m3::valuespecification::AppliedFunction[1] |
      if ($f.function->in($functions),
        | $f.parameters->at(0)->removeTDSFunction($functions),
        | ^$f(parameters = $f.parameters->map(p | $p->removeTDSFunction($functions))));,
    v:meta::protocols::pure::vX_X_X::metamodel::m3::valuespecification::ValueSpecification[1] | $v;
  ]);
}


function meta::external::query::sql::transformation::compile::utils::_extractDependencies(v:Any[1]):PackageableElement[*]
{
  $v->match([
    z:FunctionDefinition<Any>[1] |if($z->instanceOf(PackageableElement) && $z->elementToPath()->contains('::tests::'),|$z->cast(@PackageableElement),|[])->concatenate($z.expressionSequence->evaluateAndDeactivate()->map(x|$x->_extractDependencies()));,
    x:SimpleFunctionExpression[1]|let res = $x.parametersValues->evaluateAndDeactivate()->map(p|$p->_extractDependencies());
                                  $res->concatenate($x.func->_extractDependencies());,
    i: InstanceValue[1] | $i.values->evaluateAndDeactivate()->map(p|$p->_extractDependencies()),
    x: meta::pure::metamodel::relation::RelationElementAccessor<Any>[1] | $x.sourceElementContainer,
    s: meta::external::query::sql::expression::SQLExpression<Any>[1]|$s.pureFunction->_extractDependencies(),
    a:Any[1] | []
  ]);
}

function meta::external::query::sql::transformation::compile::utils::scanDependencies(v:PackageableElement[*], alreadyFound:PackageableElement[*], extraScanDependenciesType: Function<{Nil[0..1]->PackageableElement[*]}>[*]):PackageableElement[*]
{
  let found = $v->fold(
                        {p,a|$a->concatenate(
                                $p->match(
                                      $extraScanDependenciesType->concatenate(
                                        [
                                        x:Database[1]|$x.includes,
                                        x:Any[1]|[]
                                        ]
                                      )->toOneMany()
                                )
                            )
                        },
                        []
                      )->removeDuplicates();
  let newOnes = $found->removeAll($alreadyFound);
  $v->concatenate($found->concatenate(if($newOnes->isEmpty(),|[],|$newOnes->scanDependencies($alreadyFound->concatenate($newOnes), $extraScanDependenciesType))))->removeDuplicates();
}

function <<access.private>> meta::external::query::sql::transformation::queryToPure::wrapWithFro<T>(item:T[1], mapping:Mapping[0..1], runtime:Runtime[0..1], executionContext:ExecutionContext[0..1], relation:Boolean[1]):T[1]
{
  $item->match([
    l:LambdaFunction<Any>[1] | wrapWithLambdaFrom($l, $mapping, $runtime)->cast(@T),
    v:ValueSpecification[1] | wrapWithFrom($v, $mapping, $runtime, $executionContext, $relation)->cast(@T)
  ])
}

function meta::external::query::sql::transformation::compile::utils::wrapWithLambdaFrom(lambda:LambdaFunction<Any>[1], mapping:Mapping[0..1], runtime:Any[0..1]):LambdaFunction<Any>[1]
{
  if ($mapping->isEmpty() && $runtime->isEmpty(),
    | $lambda,
    | let params = $lambda->iv()->concatenate(if ($mapping->isNotEmpty(), | $mapping->iv(), | []))->concatenate(if ($runtime->isNotEmpty(), | $runtime->iv(), | []));

      let func = [
        pair($mapping->isEmpty() && $runtime->toOne()->instanceOf(PackageableRuntime), from_FunctionDefinition_1__PackageableRuntime_1__T_m_->cast(@FunctionDefinition<Any>)),
        pair($mapping->isEmpty() && $runtime->toOne()->instanceOf(Runtime), from_FunctionDefinition_1__Runtime_1__T_m_->cast(@FunctionDefinition<Any>)),
        pair($mapping->isNotEmpty() && $runtime->toOne()->instanceOf(PackageableRuntime), from_FunctionDefinition_1__Mapping_1__PackageableRuntime_1__T_m_->cast(@FunctionDefinition<Any>)),
        pair($mapping->isNotEmpty() && $runtime->toOne()->instanceOf(Runtime), from_FunctionDefinition_1__Mapping_1__Runtime_1__T_m_->cast(@FunctionDefinition<Any>))
      ]->getValue(true);

      let sfe = sfe($func, $lambda->functionReturnType(), [], PureOne, $params);

      ^$lambda(expressionSequence = $sfe);
  );
}

function meta::external::query::sql::transformation::compile::utils::wrapWithFrom(expression:ValueSpecification[1], mapping:Mapping[0..1], runtime:Runtime[0..1], executionContext:ExecutionContext[0..1], relation:Boolean[1]):ValueSpecification[1]
{
  let mappingOne = if ($mapping->isEmpty(), | emptyMapping(), | $mapping->toOne());

  if ($relation,
      | [
            pair($mapping->isEmpty() && $runtime->isNotEmpty(), |
                sfe(meta::pure::mapping::from_T_m__Runtime_1__T_m_,[$expression, iv($runtime->toOne())])),
            pair($mapping->isNotEmpty() && $runtime->isNotEmpty(), |
                sfe(meta::pure::mapping::from_T_m__Mapping_1__Runtime_1__T_m_, [$expression, iv($mappingOne), iv($runtime->toOne())]))
        ]->getValue(true, | $expression)->eval(),
      | [
            pair($runtime->isNotEmpty() && $executionContext->isNotEmpty(), |
                sfe(meta::pure::mapping::from_TabularDataSet_1__Mapping_1__Runtime_1__ExecutionContext_1__TabularDataSet_1_, [$expression, iv($mappingOne), iv($runtime->toOne()), iv($executionContext)])),
          pair($runtime->isNotEmpty() && $executionContext->isEmpty(), |
                sfe(meta::pure::mapping::from_TabularDataSet_1__Mapping_1__Runtime_1__TabularDataSet_1_, [$expression, iv($mappingOne), iv($runtime->toOne())]))
        ]->getValue(true, | $expression)->eval()
  );
}

