function meta::external::query::sql::transformation::compile::utils::removeFrom(x:ValueSpecification[1]):ValueSpecification[1]
{
  $x->match(
    [
      v:FunctionExpression[1]| if($v.func == meta::pure::mapping::from_T_m__Mapping_1__Runtime_1__T_m_,
                                    |$v.parametersValues->at(0)->evaluateAndDeactivate()->removeFrom(),
                                    |^$v(parametersValues=$v.parametersValues->evaluateAndDeactivate()->map(pv|$pv->removeFrom()))
                               ),
      x:ValueSpecification[1]|$x
    ]
  )
}


