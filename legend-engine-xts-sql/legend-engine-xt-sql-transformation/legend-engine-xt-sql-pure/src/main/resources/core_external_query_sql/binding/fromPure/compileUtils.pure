function meta::external::query::sql::transformation::compile::utils::compileViaGrammar(lambda:LambdaFunction<Any>[1], removeFrom:Boolean[1]):LambdaFunction<Any>[1]
{
  let config = meta::external::query::sql::transformation::queryToPure::dynamicGrammarConfiguration();
  let functionStr = if ($removeFrom, | $lambda->removeFrom(), | $lambda)->printFunctionDefinition($config, ^GContext(space=''));
  let dependenciesAsStr = $lambda
                          ->meta::external::query::sql::transformation::compile::utils::_extractDependencies()
                          ->scanDependencies([], meta::pure::extension::runtime::getExtensions().moduleExtensions->filter(x|$x->instanceOf(PureToSQLSourceModule))->cast(@PureToSQLSourceModule).extraScanDependenciesType)
                          ->removeDuplicates({a,b|$a->elementToPath() == $b->elementToPath()})
                          ->map(x|$x->printPackageableElements($config))->joinStrings('\n');

  let code =  $dependenciesAsStr+
              '\n###Pure\n'+
              'function test::container():Any[*]{\n'+
              '  ' + $functionStr + '\n'+
              '}';

  meta::legend::compile($code)->filter(x|$x.name == 'container__Any_MANY_')->cast(@FunctionDefinition<Any>).expressionSequence->cast(@InstanceValue)->evaluateAndDeactivate().values->toOne()->cast(@LambdaFunction<Any>);
}

