function {doc.doc = 'Upper cases the first charater of the provided string'} meta::pure::functions::string::toUpperFirstCharacter(values : String[*]) : String[*] {
      $values->map({s|
         if($s->length() == 0,
            |$s,
            |$s->substring(0, 1)->toUpper() + $s->substring(1)
            )
         })
}