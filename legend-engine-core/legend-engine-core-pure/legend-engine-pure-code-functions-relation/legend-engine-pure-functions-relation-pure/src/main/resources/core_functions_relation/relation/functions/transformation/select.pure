function <<PCT.test>> meta::pure::functions::relation::tests::select::testMultiColsSelectShared<T|m>(f:Function<{Function<{->T[m]}>[1]->T[m]}>[1]):Boolean[1]
{
    let expr = {
                | #TDS
                      val, str, other
                      1, a,  a
                      3, ewe, b
                      4, qw, c
                      5, wwe, d
                      6, weq, e
                  #->select(~[val, other]);
               };

    let res =  $f->eval($expr);

    assertEquals( '#TDS\n'+
                  '   val,other\n'+
                  '   1,a\n'+
                  '   3,b\n'+
                  '   4,c\n'+
                  '   5,d\n'+
                  '   6,e\n'+
                  '#', $res->toString());
}

