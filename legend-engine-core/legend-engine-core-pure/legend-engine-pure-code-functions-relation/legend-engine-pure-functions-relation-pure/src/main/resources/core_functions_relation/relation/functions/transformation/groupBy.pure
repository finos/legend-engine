{
    let expr = {
                |#TDS
                  id, grp, name
                  1, 2, A
                  2, 1, B
                  3, 3, C
                #->groupBy(~idSum : x | $x.id : y | $y->plus());
               };

    let res =  $f->eval($expr);

    assertEquals( '#TDS\n'+
                  '   idSum\n'+
                  '   6\n'+
                  '#', $res->toString());
}

