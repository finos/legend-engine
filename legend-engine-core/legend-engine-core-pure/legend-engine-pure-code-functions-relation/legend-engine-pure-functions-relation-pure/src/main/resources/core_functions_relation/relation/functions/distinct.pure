import meta::pure::metamodel::relation::*;
import meta::pure::test::pct::*;

native function meta::pure::functions::relation::distinct<X,T>(rel:Relation<T>[1], columns:ColSpecArray<XâŠ†T>[1]):Relation<T>[1];

function <<test.Test>> meta::pure::functions::relation::tests::distinct::testSimpleDistinct():Boolean[1]
{
    let res = #TDS
                val, str
                1, a
                3, ewe
                1, qw
                5, wwe
                5, weq
              #->distinct(~[val]);
    assertEquals(3, $res->size());
    assertEquals('135', $res->map(c|$c.val->toOne()->toString())->joinStrings(''));
}