import meta::rel::utils::meta::*;

function meta::rel::utils::meta::primitiveProperties(class: Class<Any>[1]): Property<Nil, Any|*>[*] {
  $class
    .properties
    ->filter(property | $property->isPrimitiveValueProperty();)
}

function meta::rel::utils::meta::complexProperties(class: Class<Any>[1]): Property<Nil, Any|*>[*] {
  $class
    .propertiesFromAssociations
    ->concatenate(
      $class.properties
        ->filter(property | !$property->isPrimitiveValueProperty();)
    );
}